<h2>Flights Index</h2>

<% @flights.each do |flight| %>
  <div class ="flight_container", id="flight-<%= flight.id %>">
    <p>Flight Number: <%= flight.number %> | Airline: <%= flight.airline.name %></p>
    <p>Passengers:</p>
    <ul>
      <div id="passengers">
        <% flight.passengers.each do |passenger| %>
          <li>
            <div id="passenger-<%= passenger.id %>">
              <%= passenger.name %> <%= button_to "Remove Passenger", [flight, passenger], method: :delete %>
            </div>
          </li>
        <% end %>
      </div>
    </ul>
  </div>
<% end %>